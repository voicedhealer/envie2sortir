            // Attendre un peu et forcer la redirection vers le dashboard
            await new Promise(resolve => setTimeout(resolve, 1000));
            router.push('/dashboard');
          }
        } else {
          // Redirection vers le dashboard m√™me sans autoLogin
          router.push('/dashboard');
        }
      }
      
    } catch (error) {
